<% layout('layouts/app') %>  

<h1>Update Destination</h1>
<form action="/destinations/<%= destination._id %>?_method=PUT" method="post">
  <div>
    <label for="name">Name</label>
    <input type="text" name="destination[name]" id="name" value='<%= destination.name %>'>
  </div>
  <div>
    <label for="location">Location</label>
    <input type="text" name="destination[location]" id="location" value='<%= destination.location %>'>
  </div>
  <div>
    <label for="price">Price</label>
    <input type="number" name="destination[price]" id="price" value='<%= destination.price %>'>
  </div>
  <button type="submit">Save</button>
</form>
