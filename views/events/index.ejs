
<% layout('layouts/app') %>  

<h1>All Events</h1>

<% for (const event of events) { %>
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <img src="/images/<%= event.images[0].filename %>" alt="<%= event.name %>" class="img-fluid">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= event.name %></h5>
            <p class="card-text"><%= event.description %></p>
            <p class="card-text">
              <small class="text-secondary"><%= event.location %></small>
            </p>
            <a href="/events/<%= event._id %>" class="btn btn-primary">View <%= event.name %></a>
          </div>
        </div>
      </div>
    </div>
<% } %>
